<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:minWidth="300dp"
        android:minHeight="200dp"
        android:backgroundTint="#90FFFFFF"
        android:layout_marginBottom="48dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:minWidth="250dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_login"
                android:textSize="24sp"
                android:layout_marginBottom="36dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itUserNameLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:hint="Username"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:hint="Password"
                />
            <CheckBox
                android:text="recuerdame"
                android:id="@+id/checkRecorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_login"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:minWidth="300dp"
        android:minHeight="200dp"
        android:backgroundTint="#90FFFFFF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:minWidth="250dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_register"
                android:textSize="24sp"
                android:layout_marginBottom="36dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itUserNameRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Username"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itPasswordRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:hint="Password"
                />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_register"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>