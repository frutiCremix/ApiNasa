<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
android:orientation="vertical"
    android:background="@drawable/background">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_title_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#50FFFFFF"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
        >
        <Button
            android:id="@+id/btnFotoDelDia"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btnFotoDelDia"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:textSize="24sp"
            android:backgroundTint="@color/blue"
        />

        <Button
            android:id="@+id/btnMarte"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btnFotosDeMarte"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:textSize="24sp"
            android:backgroundTint="@color/blue"

        />
        <Button
            android:id="@+id/btnSistemaSolar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btnSistemaSolar"
            android:padding="15dp"
            android:textSize="24sp"
            android:backgroundTint="@color/blue"

        />
            <Button
                android:id="@+id/btnApiNasa"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/btnApiNasa"
                android:padding="15dp"
                android:textSize="24sp"
                android:backgroundTint="@color/blue"

                />

    </LinearLayout>


    </androidx.cardview.widget.CardView>
    <Button android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LogOut"/>
    </LinearLayout>
</LinearLayout>